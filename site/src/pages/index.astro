---
import Layout from '../layouts/Layout.astro';
---
<Layout>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-bg"></div>
    <div class="hero-watermark" aria-hidden="true">W</div>
    <div class="hero-content">
      <div class="hero-location">South Cotswolds &amp; North Bristol</div>
      <h1 class="hero-title">
        Cleaning, held<br/>
        to a <em>higher</em><br/>
        <span>standard.</span>
      </h1>
      <div class="hero-bottom">
        <p class="hero-desc">
          Premium residential cleaning for homes that deserve exceptional care.
          Serving the most discerning addresses across the Cotswolds and North Bristol.
        </p>
        <div class="hero-actions">
          <a href="#contact" class="btn-primary">Book a Consultation</a>
          <a href="#services" class="btn-ghost">
            Our services
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none">
              <path d="M2 7H12M8 3L12 7L8 11" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    <div class="hero-scroll" aria-hidden="true">
      <div class="scroll-line"></div>
      <span class="scroll-label">Scroll</span>
    </div>
  </section>

  <!-- STAT BAR -->
  <div class="stat-bar">
    <div class="stat reveal"><span class="stat-number">100%</span><span class="stat-label">Satisfaction Guaranteed</span></div>
    <div class="stat reveal reveal-d1"><span class="stat-number">5.0</span><span class="stat-label">Average Client Rating</span></div>
    <div class="stat reveal reveal-d2"><span class="stat-number">Fully</span><span class="stat-label">Insured &amp; Vetted</span></div>
    <div class="stat reveal reveal-d3"><span class="stat-number">2</span><span class="stat-label">Premium Areas Served</span></div>
  </div>

  <!-- AREAS -->
  <div class="areas-section" id="areas">
    <div style="max-width:1100px;">
      <span class="label" style="color:var(--accent-light);">Where We Work</span>
      <h2 class="heading" style="color:var(--bg);">Two of England's finest<br/><em>addresses.</em></h2>
    </div>
    <div class="areas-grid">
      <div class="area-card reveal">
        <h3 class="area-name"><span>South</span> Cotswolds</h3>
        <p class="area-desc">From honey-stone manor houses to converted barns and contemporary new-builds — we understand the beauty of Cotswolds homes and clean them accordingly.</p>
        <div class="area-towns">
          <span class="town-tag">Tetbury</span>
          <span class="town-tag">Cirencester</span>
          <span class="town-tag">Stroud</span>
          <span class="town-tag">Nailsworth</span>
          <span class="town-tag">Malmesbury</span>
          <span class="town-tag">Dursley</span>
          <span class="town-tag">Wotton-under-Edge</span>
        </div>
      </div>
      <div class="area-card reveal reveal-d2">
        <h3 class="area-name"><span>North</span> Bristol</h3>
        <p class="area-desc">Georgian townhouses, Victorian villas, and leafy family homes — North Bristol's most sought-after streets deserve a service to match.</p>
        <div class="area-towns">
          <span class="town-tag">Clifton</span>
          <span class="town-tag">Redland</span>
          <span class="town-tag">Henleaze</span>
          <span class="town-tag">Westbury-on-Trym</span>
          <span class="town-tag">Stoke Bishop</span>
          <span class="town-tag">Sneyd Park</span>
        </div>
      </div>
    </div>
  </div>

  <!-- SERVICES -->
  <section class="section" id="services">
    <div class="services-section">
      <div class="services-header">
        <div class="reveal">
          <span class="label">What We Offer</span>
          <h2 class="heading">Every service,<br/><strong>meticulously</strong> delivered.</h2>
        </div>
        <p class="reveal" style="font-size:0.88rem;color:var(--mid);max-width:300px;line-height:1.75;text-align:right;">
          Premium, eco-conscious products. Complete discretion. Unwavering respect for your home.
        </p>
      </div>
      <div class="services-list">
        <div class="service-item reveal">
          <span class="service-num">01</span>
          <div>
            <h3 class="service-title">Regular Maintenance</h3>
            <p class="service-desc">Weekly or fortnightly visits tailored precisely to your home and routine. Consistent excellence, every time we arrive.</p>
          </div>
        </div>
        <div class="service-item reveal reveal-d1">
          <span class="service-num">02</span>
          <div>
            <h3 class="service-title">Deep Clean</h3>
            <p class="service-desc">A comprehensive top-to-bottom clean, reaching every surface and space. The perfect starting point — or seasonal refresh.</p>
          </div>
        </div>
        <div class="service-item reveal reveal-d2">
          <span class="service-num">03</span>
          <div>
            <h3 class="service-title">Move-In / Move-Out</h3>
            <p class="service-desc">Leave or arrive to a pristine home. Meticulous attention ensures every surface is flawless at every transition.</p>
          </div>
        </div>
        <div class="service-item reveal reveal-d3">
          <span class="service-num">04</span>
          <div>
            <h3 class="service-title">Post-Event</h3>
            <p class="service-desc">After dinner parties, celebrations, and occasions — we restore your home quietly, swiftly, and completely.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- PROCESS -->
  <section class="section process-section" id="process">
    <div class="process-inner">
      <span class="label reveal">How It Works</span>
      <h2 class="heading reveal">Effortless from<br/><em>first contact.</em></h2>
      <div class="process-steps">
        <div class="process-step reveal">
          <span class="step-n">Step 01</span>
          <h3 class="step-title">Consultation</h3>
          <p class="step-desc">A brief call to understand your home, your preferences, and exactly what matters most to you.</p>
        </div>
        <div class="process-step reveal reveal-d1">
          <span class="step-n">Step 02</span>
          <h3 class="step-title">Tailored Quote</h3>
          <p class="step-desc">A clear, transparent proposal — no hidden costs, no surprises. Just exactly what you need.</p>
        </div>
        <div class="process-step reveal reveal-d2">
          <span class="step-n">Step 03</span>
          <h3 class="step-title">First Visit</h3>
          <p class="step-desc">Your dedicated cleaner arrives on time, fully equipped, and ready to set the standard from day one.</p>
        </div>
        <div class="process-step reveal reveal-d3">
          <span class="step-n">Step 04</span>
          <h3 class="step-title">Your Standard</h3>
          <p class="step-desc">We learn, refine, and improve with every visit. This is a long-term partnership, built on trust.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- TESTIMONIALS -->
  <section class="section" id="reviews">
    <div class="testimonials-inner">
      <span class="label reveal">Client Reviews</span>
      <h2 class="heading reveal">Trusted across<br/><strong>both counties.</strong></h2>
      <div class="testimonials-grid">
        <div class="t-card reveal">
          <span class="t-stars">★ ★ ★ ★ ★</span>
          <p class="t-quote">"The standard of clean is unlike anything we've experienced. Our home feels genuinely cared for after every single visit."</p>
          <div class="t-author">Sarah M.</div>
          <div class="t-location">Clifton, Bristol</div>
        </div>
        <div class="t-card reveal reveal-d1">
          <span class="t-stars">★ ★ ★ ★ ★</span>
          <p class="t-quote">"After years of being disappointed, we finally found a service that actually meets our expectations. Punctual, thorough, completely trustworthy."</p>
          <div class="t-author">James &amp; Clara R.</div>
          <div class="t-location">Tetbury, Cotswolds</div>
        </div>
        <div class="t-card reveal reveal-d2">
          <span class="t-stars">★ ★ ★ ★ ★</span>
          <p class="t-quote">"Booked a post-party clean. They arrived the next morning and left the house in better condition than before guests arrived. Remarkable."</p>
          <div class="t-author">Olivia T.</div>
          <div class="t-location">Henleaze, Bristol</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-section" id="contact">
    <div class="cta-inner">
      <span class="label reveal">Get in Touch</span>
      <h2 class="heading reveal">Ready to raise<br/>the <em>standard?</em></h2>
      <p class="reveal">Leave your email and we'll be in touch within 24 hours to arrange a complimentary, no-obligation consultation.</p>
<form class="cta-form reveal" id="cta-form">
  <input type="hidden" name="access_key" value="5d3965b0-6104-489f-96d2-2bf56f7ef9ef" />
  <input type="hidden" name="subject" value="New Enquiry — The Walsh Standard" />
  <input type="email" name="email" placeholder="Your email address" required />
  <button type="submit">Book a Call</button>
</form>
<p class="cta-note reveal" id="form-message"></p>
    </div>
  </section>

</Layout>

<style>
  /* HERO */
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 0 4rem 5rem;
    position: relative;
    overflow: hidden;
  }
  .hero-bg {
    position: absolute; inset: 0;
    background:
      radial-gradient(ellipse 80% 60% at 70% 40%, rgba(74,92,78,0.07) 0%, transparent 70%),
      linear-gradient(180deg, var(--bg) 0%, var(--bg-warm) 100%);
    z-index: 0;
  }
  .hero-watermark {
    position: absolute;
    top: 6%; right: -2%;
    font-size: clamp(14rem, 22vw, 22rem);
    font-weight: 200;
    letter-spacing: -0.04em;
    color: rgba(0,0,0,0.04);
    line-height: 1;
    pointer-events: none;
    z-index: 0;
    user-select: none;
  }
  .hero-content { position: relative; z-index: 1; max-width: 1100px; }
  .hero-location {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 0.72rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 2.5rem;
    opacity: 0;
    animation: fadeUp 0.8s 0.2s ease forwards;
  }
  .hero-location::before {
    content: '';
    display: inline-block;
    width: 6px; height: 6px;
    background: var(--accent);
    border-radius: 50%;
  }
  .hero-title {
    font-size: clamp(3.2rem, 8vw, 8.5rem);
    font-weight: 200;
    line-height: 1.0;
    letter-spacing: -0.03em;
    color: var(--black);
    margin-bottom: 2.5rem;
    opacity: 0;
    animation: fadeUp 0.9s 0.35s ease forwards;
  }
  .hero-title span { font-weight: 500; }
  .hero-title em { font-style: italic; font-weight: 300; color: var(--accent); }
  .hero-bottom {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 4rem;
    opacity: 0;
    animation: fadeUp 0.9s 0.55s ease forwards;
  }
  .hero-desc {
    font-size: 1.05rem;
    font-weight: 300;
    line-height: 1.75;
    color: var(--mid);
    max-width: 420px;
  }
  .hero-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1.2rem;
    flex-shrink: 0;
  }
  .btn-primary {
    display: inline-block;
    text-decoration: none;
    background: var(--black);
    color: var(--bg);
    font-size: 0.78rem;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    padding: 1rem 2.2rem;
    border-radius: 100px;
    transition: background 0.25s, transform 0.2s;
  }
  .btn-primary:hover { background: var(--accent); transform: translateY(-1px); }
  .btn-ghost {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--mid);
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    transition: color 0.25s;
  }
  .btn-ghost:hover { color: var(--black); }
  .btn-ghost svg { transition: transform 0.25s; }
  .btn-ghost:hover svg { transform: translateX(3px); }
  .hero-scroll {
    position: absolute;
    bottom: 2.5rem; left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    animation: fadeIn 1s 1.2s ease forwards;
  }
  .scroll-line {
    width: 1px; height: 48px;
    background: linear-gradient(to bottom, transparent, var(--light));
    animation: scrollPulse 2s ease-in-out infinite;
  }
  @keyframes scrollPulse { 0%,100% { opacity: 0.4; } 50% { opacity: 1; } }
  .scroll-label {
    font-size: 0.6rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--light);
  }

  /* STAT BAR */
  .stat-bar {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    border-bottom: 1px solid var(--rule);
  }
  .stat { padding: 2.5rem 4rem; border-right: 1px solid var(--rule); }
  .stat:last-child { border-right: none; }
  .stat-number {
    font-size: 2.2rem;
    font-weight: 200;
    letter-spacing: -0.03em;
    color: var(--black);
    display: block;
    margin-bottom: 0.3rem;
  }
  .stat-label {
    font-size: 0.72rem;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--light);
  }

  /* AREAS */
  .areas-section { background: var(--black); color: var(--bg); padding: 6rem 4rem; }
  .areas-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1px;
    background: rgba(255,255,255,0.08);
    margin-top: 4rem;
    max-width: 1100px;
  }
  .area-card {
    background: var(--off-black);
    padding: 3.5rem;
    position: relative;
    overflow: hidden;
    transition: background 0.3s;
  }
  .area-card:hover { background: #222220; }
  .area-card::after {
    content: '';
    position: absolute;
    bottom: 0; left: 0;
    width: 0; height: 2px;
    background: var(--accent-light);
    transition: width 0.4s ease;
  }
  .area-card:hover::after { width: 100%; }
  .area-name { font-size: clamp(1.8rem, 3vw, 2.8rem); font-weight: 200; letter-spacing: -0.02em; color: var(--bg); margin-bottom: 1rem; }
  .area-name span { font-weight: 500; }
  .area-desc { font-size: 0.88rem; line-height: 1.8; color: rgba(249,248,245,0.4); margin-bottom: 2rem; max-width: 360px; }
  .area-towns { display: flex; flex-wrap: wrap; gap: 0.5rem; }
  .town-tag {
    font-size: 0.65rem;
    font-weight: 400;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: rgba(143,168,146,0.8);
    border: 1px solid rgba(143,168,146,0.25);
    padding: 0.3rem 0.9rem;
    border-radius: 100px;
  }

  /* SERVICES */
  .services-section { max-width: 1100px; margin: 0 auto; }
  .services-header { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 4rem; }
  .services-list { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1px; background: var(--rule); }
  .service-item { background: var(--bg); padding: 3rem; display: flex; gap: 2rem; transition: background 0.3s; }
  .service-item:hover { background: var(--bg-warm); }
  .service-num { font-size: 0.68rem; font-weight: 500; letter-spacing: 0.2em; color: var(--light); padding-top: 0.2rem; flex-shrink: 0; }
  .service-title { font-size: 1.15rem; font-weight: 400; letter-spacing: -0.01em; color: var(--black); margin-bottom: 0.75rem; }
  .service-desc { font-size: 0.85rem; line-height: 1.75; color: var(--mid); }

  /* PROCESS */
  .process-section { background: var(--bg-warm); border-top: 1px solid var(--rule); border-bottom: 1px solid var(--rule); }
  .process-inner { max-width: 1100px; margin: 0 auto; }
  .process-steps { display: grid; grid-template-columns: repeat(4, 1fr); margin-top: 4.5rem; border: 1px solid var(--rule); }
  .process-step { padding: 2.5rem 2.5rem 3rem; border-right: 1px solid var(--rule); }
  .process-step:last-child { border-right: none; }
  .step-n { font-size: 0.62rem; font-weight: 500; letter-spacing: 0.25em; color: var(--accent); display: block; margin-bottom: 1.5rem; }
  .step-title { font-size: 1.05rem; font-weight: 400; letter-spacing: -0.01em; color: var(--black); margin-bottom: 0.75rem; }
  .step-desc { font-size: 0.82rem; line-height: 1.75; color: var(--mid); }

  /* TESTIMONIALS */
  .testimonials-inner { max-width: 1100px; margin: 0 auto; }
  .testimonials-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; margin-top: 4rem; }
  .t-card { background: var(--white); border: 1px solid var(--rule); padding: 2.5rem; border-radius: 4px; transition: box-shadow 0.3s, transform 0.3s; }
  .t-card:hover { box-shadow: 0 12px 40px rgba(0,0,0,0.07); transform: translateY(-3px); }
  .t-stars { font-size: 0.72rem; color: var(--accent); letter-spacing: 0.2em; margin-bottom: 1.25rem; display: block; }
  .t-quote { font-size: 0.95rem; font-weight: 300; line-height: 1.75; color: var(--off-black); margin-bottom: 2rem; }
  .t-author { font-size: 0.7rem; font-weight: 500; letter-spacing: 0.15em; text-transform: uppercase; color: var(--black); }
  .t-location { font-size: 0.68rem; letter-spacing: 0.1em; color: var(--light); margin-top: 0.2rem; }

  /* CTA */
  .cta-section { background: var(--black); padding: 8rem 4rem; text-align: center; position: relative; overflow: hidden; }
  .cta-section::before {
    content: '';
    position: absolute;
    top: -30%; left: 50%;
    transform: translateX(-50%);
    width: 600px; height: 400px;
    background: radial-gradient(ellipse, rgba(74,92,78,0.3) 0%, transparent 70%);
    pointer-events: none;
  }
  .cta-inner { max-width: 600px; margin: 0 auto; position: relative; z-index: 1; }
  .cta-inner .label { color: var(--accent-light); }
  .cta-inner .heading { color: var(--bg); margin-bottom: 1.5rem; }
  .cta-inner p { font-size: 0.95rem; line-height: 1.75; color: rgba(249,248,245,0.5); margin-bottom: 3rem; }
  .cta-form {
    display: flex;
    background: rgba(255,255,255,0.06);
    border: 1px solid rgba(255,255,255,0.12);
    border-radius: 100px;
    overflow: hidden;
    padding: 0.3rem;
    max-width: 460px;
    margin: 0 auto 1.5rem;
  }
  .cta-form input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    color: var(--bg);
    font-family: 'Urbanist', sans-serif;
    font-size: 0.85rem;
    font-weight: 300;
    padding: 0.75rem 1.25rem;
  }
  .cta-form input::placeholder { color: rgba(249,248,245,0.3); }
  .cta-form button {
    background: var(--white);
    border: none;
    color: var(--black);
    font-family: 'Urbanist', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    padding: 0.75rem 1.75rem;
    border-radius: 100px;
    cursor: pointer;
    transition: background 0.25s;
    white-space: nowrap;
  }
  .cta-form button:hover { background: var(--accent-light); }
  .cta-note { font-size: 0.72rem; color: rgba(249,248,245,0.25); letter-spacing: 0.08em; }

  /* MOBILE */
  @media (max-width: 900px) {
    .hero { padding: 0 1.5rem 4rem; min-height: 90vh; }
    .hero-bottom { flex-direction: column; align-items: flex-start; gap: 2rem; }
    .hero-actions { align-items: flex-start; flex-direction: row; flex-wrap: wrap; }
    .hero-watermark { display: none; }
    .stat-bar { grid-template-columns: 1fr 1fr; }
    .stat { padding: 2rem 1.5rem; }
    .stat:nth-child(2) { border-right: none; }
    .areas-section { padding: 5rem 1.5rem; }
    .areas-grid { grid-template-columns: 1fr; }
    .services-header { flex-direction: column; align-items: flex-start; gap: 2rem; }
    .services-list { grid-template-columns: 1fr; }
    .service-item { padding: 2rem 1.5rem; }
    .process-steps { grid-template-columns: 1fr 1fr; }
    .process-step:nth-child(2) { border-right: none; }
    .process-step { padding: 2rem; }
    .testimonials-grid { grid-template-columns: 1fr; gap: 1rem; }
    .cta-section { padding: 6rem 1.5rem; }
    .cta-form { flex-direction: column; border-radius: 12px; padding: 0.75rem; gap: 0.5rem; }
    .cta-form input { padding: 0.75rem 1rem; }
    .cta-form button { border-radius: 8px; }
  }
</style>

<script>
  const form = document.getElementById('cta-form') as HTMLFormElement;
  const msg = document.getElementById('form-message') as HTMLElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const btn = form.querySelector('button') as HTMLButtonElement;
    btn.textContent = 'Sending...';
    btn.disabled = true;

    const data = new FormData(form);
    const res = await fetch('https://api.web3forms.com/submit', {
      method: 'POST',
      body: data
    });

    if (res.ok) {
      btn.textContent = "We'll be in touch ✓";
      btn.style.background = 'var(--accent-light)';
      msg.textContent = 'Thank you — expect to hear from us within 24 hours.';
      msg.style.color = 'var(--accent-light)';
      form.reset();
    } else {
      btn.textContent = 'Something went wrong';
      btn.disabled = false;
    }
  });
</script>