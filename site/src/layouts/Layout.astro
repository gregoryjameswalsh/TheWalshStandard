---
interface Props {
  title?: string;
  description?: string;
}
const { 
    title = "The Walsh Standard — Premium Cleaning, Cotswolds & Bristol", 
    description = "Premium residential cleaning for discerning homes across the South Cotswolds and North Bristol. Serving Tetbury, Cirencester, Stroud, Clifton, Henleaze and surrounding areas."
    } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />

  <!-- Local SEO -->
  <meta name="geo.region" content="GB-ENG" />
  <meta name="geo.placename" content="Cotswolds and Bristol" />

  <!-- Open Graph (WhatsApp, Facebook previews) -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://www.thewalshstandard.com/" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />

  <!-- Canonical -->
  <link rel="canonical" href="https://www.thewalshstandard.com/" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,200;0,300;0,400;0,500;0,600;1,300;1,400&display=swap" rel="stylesheet" />
</head>
<body>

  <nav id="nav">
    <a href="/" class="nav-logo">The Walsh Standard</a>
    <ul class="nav-links">
      <li><a href="/#services">Services</a></li>
      <li><a href="/#areas">Areas</a></li>
      <li><a href="/#process">Process</a></li>
      <li><a href="/#reviews">Reviews</a></li>
      <li><a href="/blog">Journal</a></li>
      <li><a href="/#contact" class="nav-cta">Book a Call</a></li>
    </ul>
  </nav>

  <slot />

  <footer>
    <div class="footer-brand">
      <a href="/" class="nav-logo">The Walsh Standard</a>
      <p>Premium residential cleaning for discerning homes across the South Cotswolds and North Bristol. Meticulous, reliable, and always exceptional.</p>
    </div>
    <div class="footer-col">
      <h4>Services</h4>
      <ul>
        <li><a href="/#services">Regular Maintenance</a></li>
        <li><a href="/#services">Deep Clean</a></li>
        <li><a href="/#services">Move-In / Move-Out</a></li>
        <li><a href="/#services">Post-Event</a></li>
      </ul>
    </div>
    <div class="footer-col">
      <h4>Contact</h4>
      <ul>
        <li><a href="/#contact">Book a Consultation</a></li>
        <li><a href="/#areas">Areas We Serve</a></li>
        <li><a href="/blog">Journal</a></li>
        <li><a href="mailto:hello@thewalshstandard.com">hello@thewalshstandard.com</a></li>
      </ul>
    </div>
    <div class="footer-bottom">
      <p>© 2026 The Walsh Standard. All rights reserved.</p>
      <span class="footer-tagline">Your home. Our standard.</span>
    </div>
  </footer>

</body>
</html>

<style is:global>
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
  :root {
    --black:        #0c0c0b;
    --off-black:    #1a1a18;
    --mid:          #6b6b66;
    --light:        #b0afa8;
    --rule:         #e8e6e1;
    --bg:           #f9f8f5;
    --bg-warm:      #f2f0eb;
    --white:        #ffffff;
    --accent:       #4a5c4e;
    --accent-light: #8fa892;
  }
  html { scroll-behavior: smooth; }
  body {
    background: var(--bg);
    color: var(--black);
    font-family: 'Urbanist', sans-serif;
    font-weight: 300;
    -webkit-font-smoothing: antialiased;
    overflow-x: hidden;
  }

  /* NAV */
  nav {
    position: fixed;
    top: 0; left: 0; right: 0;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.6rem 4rem;
    background: rgba(249,248,245,0.88);
    backdrop-filter: blur(18px);
    -webkit-backdrop-filter: blur(18px);
    border-bottom: 1px solid transparent;
    transition: border-color 0.4s;
  }
  nav.scrolled { border-bottom-color: var(--rule); }
  .nav-logo {
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: var(--black);
    text-decoration: none;
  }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 2.8rem;
    list-style: none;
  }
  .nav-links a {
    text-decoration: none;
    font-size: 0.78rem;
    font-weight: 400;
    letter-spacing: 0.08em;
    color: var(--mid);
    transition: color 0.25s;
  }
  .nav-links a:hover { color: var(--black); }
  .nav-cta {
    background: var(--black) !important;
    color: var(--bg) !important;
    padding: 0.6rem 1.4rem !important;
    letter-spacing: 0.12em !important;
    border-radius: 100px;
    font-weight: 400 !important;
    transition: background 0.25s !important;
  }
  .nav-cta:hover { background: var(--accent) !important; color: var(--white) !important; }

  /* FOOTER */
  footer {
    background: var(--off-black);
    padding: 4rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 4rem;
    border-top: 1px solid rgba(255,255,255,0.06);
  }
  .footer-brand .nav-logo { color: var(--bg); display: block; margin-bottom: 1rem; }
  .footer-brand p { font-size: 0.82rem; line-height: 1.75; color: rgba(249,248,245,0.35); }
  .footer-col h4 {
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(249,248,245,0.3);
    margin-bottom: 1.5rem;
  }
  .footer-col ul { list-style: none; display: flex; flex-direction: column; gap: 0.75rem; }
  .footer-col a {
    text-decoration: none;
    color: rgba(249,248,245,0.5);
    font-size: 0.82rem;
    transition: color 0.25s;
  }
  .footer-col a:hover { color: var(--bg); }
  .footer-bottom {
    grid-column: 1 / -1;
    border-top: 1px solid rgba(255,255,255,0.06);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .footer-bottom p { font-size: 0.7rem; color: rgba(249,248,245,0.2); letter-spacing: 0.08em; }
  .footer-tagline { font-size: 0.7rem; font-style: italic; color: rgba(143,168,146,0.4); letter-spacing: 0.1em; }

  /* SHARED */
  .section { padding: 7rem 4rem; }
  .label {
    font-size: 0.68rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--accent);
    display: block;
    margin-bottom: 1.5rem;
  }
  .heading {
    font-size: clamp(2rem, 4vw, 3.8rem);
    font-weight: 200;
    letter-spacing: -0.03em;
    line-height: 1.1;
    color: var(--black);
  }
  .heading strong { font-weight: 500; }
  .heading em { font-style: italic; font-weight: 300; color: var(--accent); }

  /* ANIMATIONS */
  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(28px); }
    to   { opacity: 1; transform: translateY(0); }
  }
  @keyframes fadeIn {
    from { opacity: 0; }
    to   { opacity: 1; }
  }
  .reveal {
    opacity: 0;
    transform: translateY(32px);
    transition: opacity 0.75s ease, transform 0.75s ease;
  }
  .reveal.visible { opacity: 1; transform: none; }
  .reveal-d1 { transition-delay: 0.1s; }
  .reveal-d2 { transition-delay: 0.2s; }
  .reveal-d3 { transition-delay: 0.3s; }
  .reveal-d4 { transition-delay: 0.4s; }

  /* MOBILE */
  @media (max-width: 900px) {
    nav { padding: 1.4rem 1.5rem; }
    .nav-links { display: none; }
    .section { padding: 5rem 1.5rem; }
    footer { grid-template-columns: 1fr; padding: 3rem 1.5rem; gap: 2.5rem; }
    .footer-bottom { flex-direction: column; gap: 0.75rem; text-align: center; }
  }
</style>

<script>
  // Nav scroll state
  const nav = document.getElementById('nav');
  window.addEventListener('scroll', () => {
    nav?.classList.toggle('scrolled', window.scrollY > 40);
  });

  // Scroll reveal
  const reveals = document.querySelectorAll('.reveal');
  const obs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) { e.target.classList.add('visible'); obs.unobserve(e.target); }
    });
  }, { threshold: 0.12 });
  reveals.forEach(el => obs.observe(el));
</script>